<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dialog_margin_lr"
    android:layout_marginRight="@dimen/dialog_margin_lr"
    android:background="#FFF"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_padding_lr"
    android:paddingRight="@dimen/dialog_padding_lr" >
	  <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        layout="@layout/dialog_title" />
    <EditText
        android:id="@+id/etInput"
        style="@style/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dialog_item_margin_tb"
        android:gravity="left|center_vertical"
        android:maxLength="20"
        android:minHeight="@dimen/dialog_edittext_min_height"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/listview_divider_height"
        android:background="#C8C8C8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_btn_margin_tb"
        android:layout_marginTop="@dimen/dialog_btn_margin_tb"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="0dp"
            style="@style/ButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="确 定" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/tvRight"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="确 定" />
    </LinearLayout>

</LinearLayout>