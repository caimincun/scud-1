<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:id="@+id/goodsshow_rlHead"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FFFFFF"
        >
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/photo_1"
            android:scaleType="fitXY"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/default_padding"
            >
            <com.team.dream.runlegwork.view.CircleImageView 
                android:id="@+id/goodsshow_ivHead"
                android:layout_width="@dimen/skillpeopledetail_headwidth"
                android:layout_height="@dimen/skillpeopledetail_headwidth"
                android:src="@drawable/photo_1"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/goodsshow_ivHead"
                android:layout_marginLeft="@dimen/default_padding"
                >
                <TextView 
                    android:id="@+id/goodsshow_tvShopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="丸子邻家商铺"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    />
                <TextView 
                    android:id="@+id/goodsshow_tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="吃货天堂，让你吃到爽"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="@dimen/default_padding"
                    />
            </LinearLayout>
        </RelativeLayout>
        
        <TextView 
            android:id="@+id/goodsshow_tvClassity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="14sp"
            android:textColor="@color/boy"
            android:text="商品分类"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/default_padding"
            android:drawableRight="@drawable/icon_hamburger"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/default_padding"
            />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/goodsshow_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout 
            android:id="@+id/goodsshow_llShopbus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:gravity="center"
            >
            <RelativeLayout 
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                >
                <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_showbus"
                />
                <TextView 
                    android:id="@+id/goodsshow_tvCount"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/news"
                    android:text="2"
                    android:textSize="8sp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    />
            </RelativeLayout>
            
            <TextView 
                android:id="@+id/goodsshow_tvAllMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.0"
                android:textColor="@color/goodsshow_red"
                android:layout_marginLeft="@dimen/default_padding"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/goodsshow_tvCommit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="立即结算"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@color/boy"
            />
    </LinearLayout>
    
    <com.team.dream.pulltorefresh.library.PullToRefreshGridView 
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/goodsshow_gvShopDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        ptr:ptrAnimationStyle="flip"
        android:layout_below="@id/goodsshow_rlHead"
        android:layout_above="@id/goodsshow_bottom"
        />
    
    

</RelativeLayout>
