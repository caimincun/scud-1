<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res/com.team.dream.runlegwork"
    android:id="@+id/llViewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.team.dream.runlegwork.widget.TopBar
        android:id="@+id/ctivity_accountprofile_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_paddingx1.5"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/title_padding_lr"
            android:paddingTop="@dimen/title_padding_lr" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:divider="@drawable/bg_pic_line"
                android:orientation="vertical"
                android:padding="@dimen/default_padding"
                android:showDividers="middle" >

                <RelativeLayout
                    android:id="@+id/activity_account_profile_rlpic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/view_menu_item_padding_tb"
                    android:paddingLeft="@dimen/view_menu_item_padding_lr"
                    android:paddingRight="@dimen/view_menu_item_padding_lr"
                    android:paddingTop="@dimen/view_menu_item_padding_tb" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="2dp"
                        android:text="@string/header_icon"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/activity_account_profile_ivhead"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="1dp"
                        android:src="@drawable/ic_launcher" />
                </RelativeLayout>

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@id/activity_account_profile_miname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="姓名"
                    tv:tvRightText="张三" />

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_miIdcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="身份证号码"
                    tv:tvRightText="510722199105051111" />
                
                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_miAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="年龄"
                    tv:tvRightText="0" />

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_misex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    tv:tvLeftText="性别"
                    tv:tvRightText="保密" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_paddingx1.5"
                android:background="#FFFFFF"
                android:divider="@drawable/bg_pic_line"
                android:orientation="vertical"
                android:padding="@dimen/default_padding"
                android:showDividers="middle" >

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_miemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="邮箱"
                    tv:tvRightText="aaaa@qq.com" />

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_miLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="职业"
                    tv:tvRightText="老师" />

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_misigner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="签名"
                    tv:tvRightText="cral" />

                <com.team.dream.runlegwork.view.MenuItem1
                    android:id="@+id/activity_account_profile_miIntriduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tv:tvLeftText="个人简介"
                    tv:tvRightText="大家好，我是小白，我是一个程序员！" />
            </LinearLayout>

            <Button
                android:id="@+id/activity_account_profile_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:layout_marginTop="@dimen/default_paddingx1.5"
                android:background="@drawable/selector_btn_confirm"
                android:text="@string/save_count"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>