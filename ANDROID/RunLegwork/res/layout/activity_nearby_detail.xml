<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.team.dream.runlegwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.team.dream.runlegwork.widget.TopBar
        android:id="@+id/activity_nearbydetail_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_searchdetail1" >

            <com.team.dream.runlegwork.view.CircleImageView
                android:id="@+id/nearby_detail_ivHead"
                android:layout_width="@dimen/skillpeopledetail_headwidth"
                android:layout_height="@dimen/skillpeopledetail_headwidth"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_paddingx1.5"
                android:scaleType="centerCrop"
                android:src="@drawable/home_banner_2"
                app:border_color="#FFFFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nearby_detail_ivHead"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nearby_detail_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小白"
                    android:textSize="@dimen/default_larger_text_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#dadada"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding">

                    <TextView
                        android:id="@+id/nearby_detail_tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="@color/boy" />

                    <ImageView
                        android:id="@+id/nearby_detail_ivSex"
                        android:layout_width="@dimen/nearby_iconboy_width"
                        android:layout_height="@dimen/nearby_iconboy_width"
                        android:layout_marginLeft="@dimen/default_paddingx0_5" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/nearby_detail_addr"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nearby_detail_tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/landmark_white"
                    android:drawablePadding="@dimen/default_paddingx0_5"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="成都市 双流县 0.99km"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nearby_paddtopb"
                android:paddingLeft="@dimen/main_padding_small"
                android:paddingTop="@dimen/nearby_paddtopb" >

                <TextView
                    android:layout_width="@dimen/nearby_tvrenzhen"
                    android:layout_height="wrap_content"
                    android:text="身份信息" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_padding_small"
                    android:text="已认证"
                    android:textColor="@color/mygray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nearby_paddtopb"
                android:paddingLeft="@dimen/main_padding_small"
                android:paddingTop="@dimen/nearby_paddtopb" >

                <TextView
                    android:layout_width="@dimen/nearby_tvrenzhen"
                    android:layout_height="wrap_content"
                    android:text="职业" />

                <TextView
                    android:id="@+id/nearby_detail_tvJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_padding_small"
                    android:text="程序员"
                    android:textColor="@color/mygray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nearby_paddtopb"
                android:paddingLeft="@dimen/main_padding_small"
                android:paddingTop="@dimen/nearby_paddtopb" >

                <TextView
                    android:layout_width="@dimen/nearby_tvrenzhen"
                    android:layout_height="wrap_content"
                    android:text="个性签名" />

                <TextView
                    android:id="@+id/nearby_detail_tvSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/main_padding_small"
                    android:text="暂无个性签名"
                    android:textColor="@color/mygray" />
            </LinearLayout>

            <TextView
                android:id="@+id/nearby_detail_tvIntriduce"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="#FFFFFF"
                android:paddingBottom="@dimen/nearby_paddtopb"
                android:paddingLeft="@dimen/main_padding_small"
                android:paddingTop="@dimen/nearby_paddtopb"
                android:text="啊是否打算打发撒旦法撒旦飞洒地方撒旦飞洒发萨菲"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/nearby_paddtopb"
                android:paddingLeft="@dimen/main_padding_small" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2015-6-22"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:padding="@dimen/default_padding"
                android:text="正在出售的技能" />

            <com.team.dream.pulltorefresh.library.PullToRefreshListView
                xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/nearbydetail_ptListv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clipToPadding="false"
                android:divider="@color/defualt_bg_color1"
                android:dividerHeight="1dp"
                android:scrollbarStyle="outsideOverlay"
                ptr:ptrAnimationStyle="flip" >
            </com.team.dream.pulltorefresh.library.PullToRefreshListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>