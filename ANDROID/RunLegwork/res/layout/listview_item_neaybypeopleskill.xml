<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/default_padding" >
	<ImageView 
	    android:id="@+id/item_nearbypeopleskill_iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:src="@drawable/my_bt_arrowinstal"
	    android:layout_alignParentRight="true"
	    android:visibility="invisible"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_nearbypeopleskill_iv"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_paddingx0_5" />

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvIntriduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_paddingx0_5"
            android:textColor="#888888"
            android:text="啊是否撒范德萨发斯蒂芬"
            android:singleLine="true" />
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015/1/1"
        android:layout_alignParentRight="true"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即预约"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_appo"
        android:gravity="center"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>