<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="@dimen/default_padding" >
	<ImageView 
	    android:id="@+id/item_nearbypeopleskill_iv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:src="@drawable/my_bt_arrowinstal"
	    android:layout_alignParentRight="true"
	    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_nearbypeopleskill_iv"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="陪吃饭" />

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_paddingx0_5"
            android:text="200元/小时" />

        <TextView
            android:id="@+id/item_nearbypeopleskill_tvIntriduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_paddingx0_5"
            android:textColor="@color/default_textcolor"
            android:singleLine="true"
            android:text="asdfasdfasdf" />
    </LinearLayout>

</RelativeLayout>