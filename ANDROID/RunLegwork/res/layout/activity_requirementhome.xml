<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >
    <com.team.dream.runlegwork.widget.MainTitileBar
        android:id="@+id/reqhome_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/reqhome_tvDistance"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="按距离"
	        android:padding="@dimen/default_padding"
	        android:gravity="center"
	        />
	    <TextView 
	        android:layout_width="1dp"
	        android:layout_height="match_parent"
	        android:background="@color/default_textcolor"
	        android:layout_marginTop="@dimen/default_paddingx0_5"
	        android:layout_marginBottom="@dimen/default_paddingx0_5"
	        />
	    <TextView 
	        android:id="@+id/reqhome_tvTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="按时间"
	        android:padding="@dimen/default_padding"
	        android:gravity="center"
	        />
	    
	</LinearLayout>
	<android.support.v4.view.ViewPager
	    android:id="@+id/reqhome_vp"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    ></android.support.v4.view.ViewPager>
</LinearLayout>
