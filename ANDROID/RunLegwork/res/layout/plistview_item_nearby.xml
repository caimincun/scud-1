<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.team.dream.runlegwork"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_white"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	<com.team.dream.runlegwork.view.RoundImageView
	      
	      android:id="@+id/itemNearby_ivHead"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_banner_2"
            app:type="round"
            
	    />
        <!-- <ImageView
            android:id="@+id/itemNearby_ivHead"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_pressed" /> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_padding"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/itemNearby_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小白"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/itemNearby_tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/itemNearby_tvName"
                    android:layout_alignParentRight="true"
                    android:text="1.1km"
                    android:textColor="@color/textview_ninea" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
				
                <TextView
                    android:id="@+id/itemNearby_tvSexandAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/boy"
                    android:textSize="15sp" />
				<ImageView 
				    android:id="@+id/itemNearby_ivSex"
				    android:layout_width="@dimen/nearby_iconboy_width"
				    android:layout_height="@dimen/nearby_iconboy_width"
				    android:background="@drawable/icon_boy"
				    />
                <TextView
                    android:id="@+id/itemNearby_tvLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="程序员"
                    android:textColor="@color/boy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/itemNearby_tvSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="服务：1元/小时" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defualt_bg_color"
        android:layout_marginTop="@dimen/default_padding"
        />
	<TextView
	    android:id="@+id/itemNearby_tvIntriduce" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="我是小白，我要坑到死"
	    android:singleLine="true"
	    android:ellipsize="end"
	    android:layout_marginTop="@dimen/default_padding"
	    />
</LinearLayout>