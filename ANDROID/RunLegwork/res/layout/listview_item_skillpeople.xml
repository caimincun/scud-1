<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_padding" >
    
    <ImageView 
        android:layout_width="@dimen/nearby_detail_headwidth"
        android:layout_height="@dimen/nearby_detail_headwidth"
        android:src="@drawable/user_default_head"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_padding"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:id="@+id/item_skillpeople_tvSkill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/default_textcolor"
                android:text="@string/skill"
                />
            <TextView 
                android:id="@+id/item_skillpeople_tvSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_skillpeople_tvSkill1"
                android:layout_marginLeft="@dimen/default_padding"
                />
            <TextView 
                android:id="@+id/item_skillpeople_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/defualt_title_color"
                android:text="200"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/default_paddingx0_5"
                android:orientation="horizontal" >
				
                <TextView
                    android:id="@+id/item_skillpeople_tvSexandAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="0"
                    android:textColor="@color/boy"
                    android:textSize="15sp" />
				<ImageView 
				    android:id="@+id/item_skillpeople_ivSex"
				    android:layout_width="@dimen/nearby_iconboy_width"
				    android:layout_height="@dimen/nearby_iconboy_width"
				    />
                <TextView
                    android:id="@+id/item_skillpeople_tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="10km"
                    android:textColor="@color/boy" />
            </LinearLayout>
            <TextView 
                android:id="@+id/item_skillpeople_tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小白"
                android:layout_marginTop="@dimen/default_paddingx0_5"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                 <ImageView 
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>
