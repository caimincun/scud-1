<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding"
    android:paddingLeft="@dimen/default_paddingx2"
    android:paddingRight="@dimen/default_paddingx2" >
    
    
    <TextView 
        android:id="@+id/item_poppay_tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="辣条"
        android:textSize="@dimen/default_larger_text_size"
        android:padding="@dimen/default_paddingx0_5"
        />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/item_poppay_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥30"
        android:textColor="@color/goodsshow_red"
        android:textSize="@dimen/default_larger_text_size"
        />
        <ImageView 
            android:id="@+id/item_poppay_ivJian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_leftw"
            android:scaleType="center"
            android:padding="@dimen/default_paddingx0_5"
            android:layout_marginLeft="@dimen/default_padding"
            />
        
        <TextView 
            android:id="@+id/item_poppay_tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/default_normal_text_size"
            android:layout_marginLeft="@dimen/default_padding"
            />
        
        <ImageView 
            android:id="@+id/item_poppay_ivAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_rightw"
            android:scaleType="center"
            android:padding="@dimen/default_paddingx0_5"
            android:layout_marginLeft="@dimen/default_padding"
            />
    </LinearLayout>
    

</RelativeLayout>
