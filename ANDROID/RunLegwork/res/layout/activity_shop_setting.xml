<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.team.dream.runlegwork"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.team.dream.runlegwork.widget.MainTitileBar
        android:id="@+id/mt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_shop_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mt_title"
        android:background="@color/open_shop_top_bg_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/land_gps_lagre"
            android:drawablePadding="@dimen/default_paddingx0_5"
            android:padding="@dimen/default_padding"
            android:text="@string/shop_gps"
            android:textSize="@dimen/default_submit_text_size"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_shop_loc"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_padding" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_icon"
                    android:textSize="@dimen/default_submit_text_size" />

                <com.team.dream.runlegwork.view.RoundImageView
                    android:id="@+id/iv_shop_head"
                    android:layout_width="@dimen/shop_img_w_h"
                    android:layout_height="@dimen/shop_img_w_h"
                    android:src="@drawable/shop_df_pic"
                    app:type="circle" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding" />

            <LinearLayout
                android:id="@+id/ll_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_paddingx1.5" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_name"
                    android:textSize="@dimen/default_submit_text_size" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding" />

            <LinearLayout
                android:id="@+id/ll_shop_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_paddingx1.5" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_ad"
                    android:textSize="@dimen/default_submit_text_size" />

                <TextView
                    android:id="@+id/tv_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_shop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/default_paddingx1.5" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/shop_type"
                        android:textSize="@dimen/default_submit_text_size" />

                    <TextView
                        android:id="@+id/tv_shop_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#898989"
                        android:textSize="@dimen/default_edit_text_size" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_padding"
                        android:src="@drawable/ic_arrow_right"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <GridView
                    android:id="@+id/gv_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/default_paddingx2"
                    android:layout_marginRight="@dimen/default_paddingx2"
                    android:horizontalSpacing="@dimen/default_paddingx0_5"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/default_paddingx0_5"
                    tools:ignore="NestedScrolling" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_paddingx1.5"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:background="#f5f4f2" />

            <LinearLayout
                android:id="@+id/ll_shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_paddingx1.5" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_address"
                    android:textSize="@dimen/default_submit_text_size" />

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:src="@drawable/land_gps_shop_address"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_paddingx1.5"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding"
                android:background="#f5f4f2" />

            <LinearLayout
                android:id="@+id/ll_phone_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_paddingx1.5" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_phone"
                    android:textSize="@dimen/default_submit_text_size" />

                <TextView
                    android:id="@+id/tv_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:src="@drawable/ic_arrow_right"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding" />

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/default_paddingx1.5" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_last_price"
                    android:textSize="@dimen/default_submit_text_size" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/money_mark"
                    android:textColor="#898989"
                    android:textSize="@dimen/default_edit_text_size" />
            </LinearLayout>

            <View
                style="@style/line"
                android:layout_marginBottom="@dimen/default_paddingx8"
                android:layout_marginLeft="@dimen/default_padding"
                android:layout_marginRight="@dimen/default_padding" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_push_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sv_loc"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/lv_ma_height"
        android:background="@drawable/sl_push_submit_state"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/default_paddingx1.5"
        android:text="@string/shop_update_confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_larger_text_size" />

</RelativeLayout>