<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
           android:id="@+id/neayby_moreChoose"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/add_condition"
           android:layout_alignParentRight="true"
           android:layout_marginLeft="@dimen/default_paddingx0_5"
           android:layout_marginRight="@dimen/default_paddingx0_5"
           />
       <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/nearby_indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_toLeftOf="@id/neayby_moreChoose"
        />
       
    </RelativeLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/nearby_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
