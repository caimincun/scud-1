<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="back">
        <item name="android:paddingLeft">@dimen/default_paddingx2</item>
        <item name="android:paddingRight">@dimen/default_paddingx2</item>
        <item name="android:paddingTop">@dimen/default_paddingx1.5</item>
        <item name="android:paddingBottom">@dimen/default_paddingx1.5</item>
        <item name="android:src">@drawable/back_normal</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/bg_pic_line</item>
    </style>
    <style name="shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_height</item>
        <item name="android:background">@drawable/shadow_bottom</item>
    </style>

    <style name="title_icon">
        <item name="android:paddingLeft">@dimen/default_paddingx2</item>
        <item name="android:paddingRight">@dimen/default_paddingx2</item>
        <item name="android:paddingTop">@dimen/default_paddingx1.5</item>
        <item name="android:paddingBottom">@dimen/default_paddingx1.5</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">@dimen/default_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/default_padding_2</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">@color/defualt_hint_color</item>
        <item name="android:textSize">@dimen/default_edit_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
     <!-- 弹出框样式 -->
    <style name="CustomDialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
     <!-- 按扭样式 -->
    <style name="ButtonStyle" >
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_textsize</item>
        <item name="android:background">@drawable/selector_btn_confirm</item>
    </style>

</resources>